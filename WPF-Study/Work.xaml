<UserControl x:Class="WPF_Study.Work"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Study"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Border Margin="10,20,10,0" HorizontalAlignment="Center" Background="#FFE8EDF2" BorderThickness="3" CornerRadius="10" Padding="2" Width="auto">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0A70E2"/>
                        <GradientStop Color="#FFABD3E8" Offset="1"/>
                        <GradientStop Color="#FF1A526F" Offset="0"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <StackPanel x:Name="WorkSP"  VerticalAlignment="Center" Orientation="Vertical" Margin="10,10,10,10"></StackPanel>

            </Border>
            <TextBlock Margin="5"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
